#include<iostream>
#include<cmath>
#include<iomanip>
using namespace std;
using std::setprecision;
using std::setiosflags;
void roundToIntegers(void);
int main()
{   
    roundToIntegers();
    return 0;
}
void roundToIntegers(void)
{
    double x,y;
    cout<<setiosflags(ios::fixed | ios::showpoint);
    for (int loop=1;loop<=5;loop++)
    {
        cout<<"Enter a number : ";
        cin>>x;
        y = floor(x+0.5);
        cout<<x<<" rounded is "<< setprecision(2)<<y<<endl;
    }
}
